<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/multiple_elements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:minHeight="?android:actionBarSize"
            android:onClick="multipleElementsClick"
            android:text="@string/coordinated_motion"/>

        <Button
            android:id="@+id/multiple_incoherent_elements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:minHeight="?android:actionBarSize"
            android:onClick="multipleChaoticElementsClick"
            android:text="@string/chaotic_motion"/>

        <Button
            android:id="@+id/curved_motion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:minHeight="?android:actionBarSize"
            android:onClick="curvedMotionClick"
            android:text="@string/curved_motion"/>

        <Button
            android:id="@+id/size_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:minHeight="?android:actionBarSize"
            android:onClick="sizeChangeClick"
            android:text="@string/transforming_surfaces"/>
    </LinearLayout>
</ScrollView>